<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFADB2CA"
    tools:context="anirudh.svct.civil_syllabus">

    <Button
        android:id="@+id/sports"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/hostels"
        android:layout_centerVertical="true"
        android:background="@drawable/round_button"
        android:padding="15dp"
        android:text="R14 CIVIL"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/hostels"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:padding="15dp"
        android:text="R17 CIVIL"
        android:textColor="@android:color/white"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/sports"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/r12_civil"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sports"
        android:layout_below="@+id/sports"
        android:layout_marginTop="51dp"
        android:background="@drawable/round_button"
        android:padding="15dp"
        android:text="R12 CIVIL"
        android:textColor="@android:color/white" />

</RelativeLayout>
