<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFADB2CA"
    tools:context="anirudh.svct.Campus_life">

    <Button
        android:id="@+id/transport"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:background="@drawable/round_button"
        android:padding="15dp"
        android:text="Transport"
        android:textColor="@android:color/white"
        android:layout_below="@+id/hostels"
        android:layout_alignStart="@+id/hostels" />

    <Button
        android:id="@+id/sports"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transport"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_button"
        android:padding="15dp"
        android:text="sports"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/hostels"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_button"
        android:padding="15dp"
        android:text="Hostels"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/gym"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sports"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:background="@drawable/round_button"
        android:padding="15dp"
        android:text="Gymnasiun"
        android:textColor="@android:color/white" />
</RelativeLayout>
